<h1>Listing loved_ones</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loved_ones.each do |loved_one| %>
      <tr>
        <td><%= loved_one.first_name %></td>
        <td><%= loved_one.last_name %></td>
        <td><%= loved_one.user_id %></td>
        <td><%= link_to 'Show', loved_one %></td>
        <td><%= link_to 'Edit', edit_loved_one_path(loved_one) %></td>
        <td><%= link_to 'Destroy', loved_one, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

